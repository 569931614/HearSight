# Example environment variables for HearSight

# MinIO - change these in production
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Postgres - change this password for production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=zT84AEZZz2ZjCRjC
POSTGRES_DB=hearsight
POSTGRES_PORT=5432

# Backend / Frontend ports (optional)
BACKEND_PORT=9999
FRONTEND_PORT=10000

# OpenAI / Chat Server
# Set OPENAI_API_KEY in your local .env or export in your shell
OPENAI_API_KEY= # 必须要配置
OPENAI_BASE_URL=https://api.siliconflow.cn/v1
OPENAI_CHAT_MODEL=deepseek-ai/DeepSeek-V3 # THUDM/GLM-4-9B-0414
CHAT_MAX_WINDOWS=1000000


# Bilibili
BILIBILI_SESSDATA= # 可以不配置，也可以配置，可以去哔哩哔哩官网获取。

# Vector Backend Configuration
# 默认使用 Qdrant 向量数据库（与 pyvideotrans 共享）
# ⚠️ ChromaDB 已完全移除，代码已删除
HEARSIGHT_VECTOR_BACKEND=qdrant  # 支持: qdrant (推荐), postgresql, volcengine (仅 embedding)

# Qdrant Vector Database (用于 pyvideotrans 集成)
QDRANT_URL=http://localhost:6333  # Docker环境中使用 http://qdrant:6333
QDRANT_API_KEY=  # 可选，生产环境建议配置
QDRANT_HTTP_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_HOST=localhost  # Qdrant 服务地址
QDRANT_PORT=6333  # Qdrant 服务端口
QDRANT_COLLECTION_NAME=video_summaries  # Qdrant 集合名称

# RAG Configuration
RAG_ENABLED=true  # 启用/禁用 RAG 功能
RAG_TOP_K=5  # 检索结果数量
RAG_SIMILARITY_THRESHOLD=0.7  # 相似度阈值
RAG_INCLUDE_SUMMARIES=true  # 是否包含段落摘要
QDRANT_EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5  # 嵌入模型（需与 pyvideotrans 一致）

# 向量化服务配置（仅当使用 volcengine 或 qdrant 需要外部 embedding 时配置）
VOLCENGINE_API_KEY=  # 火山引擎 API Key（可选）
VOLCENGINE_BASE_URL=https://ark.cn-beijing.volces.com/api/v3
VOLCENGINE_EMBEDDING_MODEL=ep-20241217191853-w54rf

# Aliyun OSS Configuration - 阿里云 OSS 视频存储（可选）
# 启用后视频会上传到 OSS，前端播放使用 OSS URL
OSS_ENABLED=false  # true 启用，false 使用本地存储
OSS_PROVIDER=aliyun  # 支持: aliyun
OSS_ACCESS_KEY_ID=  # 阿里云 AccessKey ID
OSS_ACCESS_KEY_SECRET=  # 阿里云 AccessKey Secret
OSS_REGION=oss-cn-shanghai  # OSS 区域
OSS_BUCKET=  # OSS Bucket 名称
OSS_ENDPOINT=https://oss-cn-shanghai.aliyuncs.com  # OSS Endpoint
OSS_PATH_PREFIX=videos/  # 上传路径前缀
OSS_PUBLIC_ACCESS=true  # 是否公开访问
